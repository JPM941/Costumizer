<h1>Bienvenue sur la page de booking d'un costume</h1>

<div class="row">
  <div class="col">

    <%= simple_form_for [@costume, @booking],
      html: {data: {controller: 'flatpickr'}}  do |f|%>
        <%= f.input :start_date, as: :string, input_html: {data: {flatpickr_target: 'startDateInput',} } %>
        <%= f.input :end_date, as: :string, input_html: {class: 'd-none', data: {flatpickr_target: 'endDateInput'}} %>

        <%= f.submit 'Book now!', class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>


