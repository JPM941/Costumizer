<h1>Bienvenue sur la page de booking d'un costume</h1>

<%# ==================flatpickr disable dates======================= %>
  <div class="row">
    <div class="col">
        <%= simple_form_for [@costume, @booking], html: { data: { controller: 'flatpickr', flatpickr_dates_value: @costume.flatpickr_booked_dates_object }  } do |f| %>
          <%= f.input :start_date,
                      # label: false,
                      as: :string,
                      input_html: {
                          data: {
                          flatpickr_target: 'startDateInput',

                        }
                      } %>
          <%= f.input :end_date,
                      # label: false,
                      as: :string,
                      input_html: {
                        class: 'd-none',
                        data: {
                          flatpickr_target: 'endDateInput'
                        }
                      } %>
          <%= f.submit 'Book now!', class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
